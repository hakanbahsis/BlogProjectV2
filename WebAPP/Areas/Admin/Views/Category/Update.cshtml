@model CategoryUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Güncelle</h4>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <form asp-controller="Category" asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-1">
                        <label asp-for="Name" class="form-label">Kategori Adı</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kategori Adını giriniz." aria-describedby="defaultFormControlHelp" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
