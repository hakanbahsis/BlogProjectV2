@model UserProfileDto
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Profil Ayarları /</span> Profilim</h4>

<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">
            <h5 class="card-header">Profil Bilgilerim</h5>
            <!-- Account -->
            <form id="formAccountSettings" method="POST" asp-controller="User" asp-area="Admin" asp-action="Profile" enctype="multipart/form-data">
            <div class="card-body">
                <div class="d-flex align-items-start align-items-sm-center gap-4">
                    <img src="~/images/@Model.Image.FileName"
                         alt="user-avatar"
                         class="d-block rounded"
                         height="100"
                         width="100"
                         id="uploadedAvatar" />
                    <div class="button-wrapper">
                        <label asp-for="Photo" class="btn btn-primary me-2 mb-0" tabindex="0">
                            <span class="d-none d-sm-block mb-4">Fotoğrafı Güncelle</span>
                            <i class="bx bx-upload d-block d-sm-none"></i>
                            <input type="file"
                                   id="upload"
                                   asp-for="Photo"
                                   class="form account-file-input"
                                   
                                   accept="image/*" />
                        </label>
                      @*  <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                            <i class="bx bx-reset d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reset</span>
                        </button>*@


                    </div>
                </div>
            </div>
            <hr class="my-0" />
            <div class="card-body">
               
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label asp-for="FirstName" class="form-label">İsim</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="FirstName"
                                   id="firstName"
                                   autofocus />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="LastName" class="form-label">Soyisim</label>
                            <input class="form-control"
                                   type="text"
                                   asp-for="LastName"
                                   id="firstName"
                                   autofocus />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="Email" class="form-label">E-mail</label>
                            <input class="form-control"
                                   type="email"
                                   asp-for="Email"
                                   disabled
                                   id="email"
                                   placeholder="john.doe@example.com" />
                                   <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="form-label" asp-for="PhoneNumber">Telefon Numarası</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">TR (+90)</span>
                                <input type="text"
                                    
                                       id="phoneNumber"
                                       asp-for="PhoneNumber"
                                       class="form-control"
                                       placeholder="202 555 0111" />
                                       <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label asp-for="CurrentPassword" class="form-label">Mevcut Parola</label>
                            <input type="password"
                                   class="form-control"
                                   required
                                   id="organization"
                                   asp-for="CurrentPassword"
                                   />
                                   <span asp-validation-for="CurrentPassword"></span>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label asp-for="NewPassword" class="form-label">Yeni Parola</label>
                            <input type="password"
                                   class="form-control"
                                   id="organization"
                                   asp-for="NewPassword"
                                    />
                            <span asp-validation-for="NewPassword"></span>
                        </div>


                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Profili Güncelle</button>
                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                    </div>
            </div>
                </form>
            <!-- /Account -->
        </div>

    </div>
</div>

