@model UserUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container-xxl flex-grow-1 container">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Güncelle</h4>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <form asp-controller="User" asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" style="color:red"></div>
                <input  type="hidden" asp-for="Id"/>
                <div class="card-body">
                    <div class="form-group mb-1">
                        <label asp-for="FirstName" class="form-label">Kullanıcı Adı</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input asp-for="FirstName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Adı" aria-describedby="defaultFormControlHelp" />
                    </div>
                    <div class="form-group mb-1">
                        <label asp-for="FirstName" class="form-label">Kullanıcı Soyadı</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <input asp-for="LastName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Soyadı" aria-describedby="defaultFormControlHelp" />
                    </div>
                    <div class="form-group mb-1">
                        <label asp-for="Email" class="form-label">Kullanıcı Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input asp-for="Email" type="email" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Email" aria-describedby="defaultFormControlHelp" />
                    </div>
                    <div class="form-group mb-1">
                        <label asp-for="PhoneNumber" class="form-label">Kullanıcı Telefon Numarası</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="defaultFormControlInput" placeholder="Kullanıcı Telefon Numarası" aria-describedby="defaultFormControlHelp" />
                    </div>

                    <div class="form-group mb-1">
                        <label asp-for="RoleId" class="form-label">Kullanıcı Rolü</label>

                        <span asp-validation-for="RoleId" class="text-danger"></span>
                        <select id="roleList" class="form-control" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                @*    <div class="form-group mb-1">
                        <label asp-for="Password" class="form-label">Kullanıcı Parolası</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp" />
                    </div>*@
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

